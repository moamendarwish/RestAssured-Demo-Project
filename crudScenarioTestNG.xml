        <parameter name="age" value="25"/>
        <parameter name="address" value="aswan"/>
        <classes>
            <class name="com.scrolltest.api.tests.TestUpdatePerson"/>
        </classes>
    </test>


    <test name="TestDelete">
        <parameter name="id" value="10"/>
        <classes>
            <class name="com.scrolltest.api.tests.TestDELETEPerson"/>
        </classes>
    </test>
</suite>