<suite name="full create read update delete scenario">


    <test name="TestCreate">
        <parameter name="firstName" value="mo'men"/>
        <parameter name="lastName" value="darwish"/>
        <parameter name="age" value="25"/>
        <parameter name="id" value="10"/>
        <parameter name="address" value="alexandria"/>
        <classes>
            <class name="com.scrolltest.api.tests.TestPOSTPerson"/>
        </classes>
